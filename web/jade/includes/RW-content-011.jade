.container
    br
    br
    .row.align-items-center
        .col-md-12
            .card.card-outline-secondary.text-center
                .card-block
                    h4.card-title Cambio de contraseña
                    .row
                        .offset-md-1.offset-sm-0.col-md-6.col-sm-12
                            .form
                                .form-group
                                    label(for='txtEmail') Correo Electrónico
                                    input#txtEmail.form-control(type='email', name="txtEmail" placeholder='Escriba su correo electrónico')
                                .form-group
                                    label(for='txtConfirmarEmail') Número de RUC
                                    input#txtConfirmarEmail.form-control(type='email', name="txtConfirmarEmail", placeholder='Escriba el número de RUC con el cual se registró')
                        .offset-md-1.offset-sm-0.col-md-4.col-sm-12
                            .row.align-items-center
                                .col
                                    i.material-icons(style="font-size: 160px;").text-info vpn_key
                                .col
                                    button.btn.btn-primary Cambiar contraseña